{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"files": {
		"includes": [
			"**",
			"!bun.lockb",
			"!build",
			"!.vscode",
			"!.next",
			"!node_modules",
			"!**/*.css",
			"!tipitaka-md",
			"!tipitaka-md-nosplit",
			"!tipitaka-xml",
			"!playwright-report",
			"!cst",
			"!coverage",
			"!.turbo",
			"!.vercel",
			"!.cache",
			"!dist"
		]
	},
	"assist": {
		"actions": {
			"source": {
				"useSortedAttributes": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": { "level": "warn", "fix": "safe" },
				"useUniqueElementIds": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"json": {
		"parser": { "allowComments": true },
		"formatter": {
			"enabled": true,
			"indentWidth": 2,
			"lineWidth": 80
		}
	}
}
